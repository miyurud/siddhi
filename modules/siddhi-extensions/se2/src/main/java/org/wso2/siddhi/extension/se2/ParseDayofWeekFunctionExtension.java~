package org.wso2.siddhi.extension.se2;

import org.wso2.siddhi.core.config.ExecutionPlanContext;
import org.wso2.siddhi.core.exception.ExecutionPlanRuntimeException;
import org.wso2.siddhi.core.executor.ExpressionExecutor;
import org.wso2.siddhi.core.executor.function.FunctionExecutor;
import org.wso2.siddhi.query.api.definition.Attribute;
import org.wso2.siddhi.query.api.exception.ExecutionPlanValidationException;

/**
 * trim(string)
 * Returns a copy of the string, with leading and trailing whitespace omitted.
 * Accept Type(s): STRING
 * Return Type(s): STRING
 */
public class ParseDayofWeekFunctionExtension extends FunctionExecutor {

    Attribute.Type returnType = Attribute.Type.INTEGER;

    @Override
    protected void init(ExpressionExecutor[] attributeExpressionExecutors, ExecutionPlanContext executionPlanContext) {
        if (attributeExpressionExecutors.length != 1) {
            throw new ExecutionPlanValidationException(
                    "Invalid no of arguments passed to se2:parseDayofWeek() function, required 1, but found " + attributeExpressionExecutors.length);
        }
        if (attributeExpressionExecutors[0].getReturnType() != Attribute.Type.STRING) {
            throw new ExecutionPlanValidationException("Invalid parameter type found for se2:parseDayofWeek() function, required "
                    +Attribute.Type.STRING+", but found "+attributeExpressionExecutors[0].getReturnType().toString());
        }
    }

    @Override
    protected Object execute(Object[] data) {
        return null;  //Since the trim function takes in only 1 parameter, this method does not get called. Hence, not implemented.
    }

    @Override
    protected Object execute(Object data) {
        if (data == null) {
            throw new ExecutionPlanRuntimeException("Invalid input given to se2:parseDayofWeek() function. The argument cannot be null.");
        }

        String dayOfWeekStr = data.toString().trim();

        if (dayOfWeekStr.equals("Mon")) {
            return 1;
        } else if (dayOfWeekStr.equals("Tue")) {
            return 2;
        } else if (dayOfWeekStr.equals("Wed")) {
            return 3;
        } else if (dayOfWeekStr.equals("Thu")) {
            return 4;
        } else if (dayOfWeekStr.equals("Fri")) {
            return 5;
        } else if (dayOfWeekStr.equals("Sat")) {
            return 6;
        } else if (dayOfWeekStr.equals("Sun")) {
            return 7;
        }

        return -1;
    }

    @Override
    public void start() {
        //Nothing to start.
    }

    @Override
    public void stop() {
        //Nothing to stop.
    }

    @Override
    public Attribute.Type getReturnType() {
        return returnType;
    }

    @Override
    public Object[] currentState() {
        return null;  //No need to maintain a state.
    }

    @Override
    public void restoreState(Object[] state) {
        //Since there's no need to maintain a state, nothing needs to be done here.
    }
}
